<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FailFragment"
    android:background="@color/white">

    <ImageView
        android:id="@+id/img_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_fail"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="220dp"
        />
    <TextView
        android:id="@+id/title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/img_view"
        android:text="생성 실패"
        android:textSize="24sp"
        android:fontFamily="@font/pretendard_bold"
        app:layout_constraintStart_toStartOf="@id/img_view"
        app:layout_constraintEnd_toEndOf="@id/img_view"
        android:layout_marginTop="22dp"/>
    <ImageView
        android:id="@+id/imga_warnign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_wrning"
        app:layout_constraintEnd_toStartOf="@id/title2"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/title1"/>
    <TextView
        android:id="@+id/title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/imga_warnign"
        android:text="재촬영 해주세요"
        android:textSize="20sp"
        android:fontFamily="@font/pretendard_semibold"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toTopOf="@id/imga_warnign"
        app:layout_constraintBottom_toBottomOf="@id/imga_warnign"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="5dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/re_poto_button"
        android:layout_width="0dp"
        android:layout_height="54dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="67dp"
        android:background="@drawable/sp_green_button_back"
        android:elevation="0dp"
        android:stateListAnimator="@null"

        android:text="사진 재촬영"
        android:textColor="@color/gray4"
        android:textSize="20sp"
        android:fontFamily="@font/pretendard_semibold"
        />
    <ImageButton
        android:id="@+id/close_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close"
        android:padding="13dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:layout_marginStart="5dp"/>




</androidx.constraintlayout.widget.ConstraintLayout>